<h1>Hi Doc!</h1>
<h2>Crete Report for <%= pat.name %> </h2>
    <form action="/api/v1/reports/newReport/?id=<%= pat._id %>&docid=<%= user._id%>" method="POST">
    <input type="date" placeholder="Date" name="date" required />
    <select name="status" >
        <option value="Negative">
                Negative 
            </option>
            <option value="Travelled-Quarantine">
               Travelled-Quarantine 
            </option>
            <option value="Symptoms-Quarantine">
                    Symptoms-Quarantine 
            </option>
            <option value="Positive-Admit">
                Positive-Admit 
            </option>
    </select>
    <input type="submit" placeholder="Submit" value="submit" />
</form>